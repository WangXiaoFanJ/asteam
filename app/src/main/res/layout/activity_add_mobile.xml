<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context="com.dev.nutclass.activity.AddMobileActivity">
    <com.dev.nutclass.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        app:left_type="1"
        app:middle_text="绑定手机号"></com.dev.nutclass.view.TitleBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:text="为了您的账户安全，请绑定手机号"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_a8a8a8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_10"
        />
    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"/>
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/common_28"
            android:hint="仅支持中国大陆手机号"
            android:textSize="@dimen/font_13"
            android:textColorHint="@color/color_cacaca"
            android:paddingLeft="@dimen/common_3"
            android:background="@drawable/shape_edit_normal"/>
        <TextView
            android:id="@+id/tv_req_verify"
            android:layout_width="@dimen/common_80"
            android:layout_height="@dimen/common_24"
            android:text="获取验证码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12"
            android:gravity="center"
            android:background="@drawable/shape_tv_white_radius"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_0.5"
            android:background="@color/color_dcdcdc"
            android:layout_marginLeft="@dimen/common_10"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"/>
        <EditText
            android:id="@+id/edit_verify_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/common_28"
            android:hint="请输入短信验证码"
            android:textSize="@dimen/font_13"
            android:textColorHint="@color/color_cacaca"
            android:paddingLeft="@dimen/common_3"
            android:background="@drawable/shape_edit_normal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="@dimen/common_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        android:background="@drawable/shape_login_btn_bg"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_18"/>

</LinearLayout>
