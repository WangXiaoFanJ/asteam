<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dev.nutclass.activity.ChangePwdActivity01">
<com.dev.nutclass.view.TitleBar
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_44"
    app:left_type="1"
    app:middle_text="输入手机号"></com.dev.nutclass.view.TitleBar>
    <LinearLayout
        android:id="@+id/ll_container_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_10"
            android:paddingRight="@dimen/common_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13"/>
            <EditText
                android:id="@+id/edit_phone_02"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_28"
                android:hint="请输入注册手机号"
                android:textSize="@dimen/font_13"
                android:textColorHint="@color/color_cacaca"
                android:paddingLeft="@dimen/common_3"
                android:background="@drawable/shape_edit_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_0.5"
                android:background="@color/color_dcdcdc"
                android:layout_marginLeft="@dimen/common_10"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_10"
            android:paddingRight="@dimen/common_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13"/>
            <EditText
                android:id="@+id/edit_verify_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/common_28"
                android:hint="请输入验证码"
                android:textSize="@dimen/font_13"
                android:textColorHint="@color/color_cacaca"
                android:paddingLeft="@dimen/common_3"
                android:background="@drawable/shape_edit_normal"/>
            <TextView
                android:id="@+id/tv_req_verify"
                android:layout_width="@dimen/common_80"
                android:layout_height="@dimen/common_24"
                android:text="获取验证码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12"
                android:gravity="center"
                android:background="@drawable/shape_tv_white_radius"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_30"
            android:orientation="horizontal"
            android:paddingTop="@dimen/common_6"
            android:paddingLeft="@dimen/common_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长时间接收不到验证码，可以尝试"
                android:textSize="@dimen/font_11"
                android:textColor="@color/color_a8a8a8"
                />
            <TextView
                android:id="@+id/tv_req_voice_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音接收验证码"
                android:textColor="@color/color_f75250"
                android:textSize="@dimen/font_11"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login_02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:background="@drawable/shape_login_btn_bg"
            android:text="下一步"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_18"/>
    </LinearLayout>

</LinearLayout>
