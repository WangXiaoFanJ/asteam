<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.dev.nutclass.activity.EditUserInfoActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_44"
    android:paddingLeft="@dimen/common_10"
    android:paddingRight="@dimen/common_10"
    android:background="@color/color_title_bar_bg"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/common_15"
        android:layout_height="@dimen/common_20"
        android:src="@drawable/icon_back_yellow"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_15"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <EditText
        android:id="@+id/edit_user_nick"
        android:layout_marginTop="@dimen/common_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:hint="输入昵称"
        android:textColorHint="@color/color_a8a8a8"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14"
        android:paddingLeft="@dimen/common_10"/>
</LinearLayout>
