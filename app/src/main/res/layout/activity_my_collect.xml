<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context="com.dev.nutclass.activity.MyCollectActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_45"
            android:background="@color/color_title_bar_bg">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_10"
                android:src="@drawable/icon_back_yellow"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_31"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="@dimen/common_89"
                    android:layout_height="match_parent"
                    android:text="收藏课程"
                    android:textSize="@dimen/font_15"
                    android:textColor="@drawable/selector_course_list_titlebar_txt"
                    android:background="@drawable/selector_course_list_titlebar_left"/>
                <Button
                    android:id="@+id/btn_right"
                    android:layout_width="@dimen/common_89"
                    android:layout_height="match_parent"
                    android:text="收藏机构"
                    android:textSize="@dimen/font_15"
                    android:textColor="@drawable/selector_course_list_titlebar_txt"
                    android:background="@drawable/selector_coures_list_titlebar_right"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="编辑"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_7f7f7f"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_delete"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f75250"
        android:text="删  除"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_18"
        android:gravity="center"/>
</RelativeLayout>
