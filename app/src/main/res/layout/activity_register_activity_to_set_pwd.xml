<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dev.nutclass.activity.RegisterActivityToSetPwd">
    <com.dev.nutclass.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        app:left_type="1"
        app:middle_text_id="6"
        app:title_bar_bg="1"></com.dev.nutclass.view.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:orientation="horizontal"
        android:background="@color/color_title_bar_bg"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、输入手机号"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_7f7f7f"/>
        <ImageView
            android:layout_width="@dimen/common_10"
            android:layout_height="@dimen/common_13"
            android:src="@drawable/icon_arrow_right"
            android:layout_marginLeft="@dimen/common_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_20"
            android:text="2、输入验证码号"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_7f7f7f"/>
        <ImageView
            android:layout_width="@dimen/common_10"
            android:layout_height="@dimen/common_13"
            android:src="@drawable/icon_arrow_right"
            android:layout_marginLeft="@dimen/common_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_20"
            android:text="3、设置密码"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_f75250"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_pwd_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/shape_edit_normal"
        android:paddingLeft="@dimen/common_10"
        android:hint="设置一个密码"
        android:inputType="textPassword"
        android:textSize="@dimen/font_13"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cacaca"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_0.5"
            android:background="@color/color_dcdcdc"
            android:layout_marginLeft="@dimen/common_10"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_pwd_02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@drawable/shape_edit_normal"
        android:paddingLeft="@dimen/common_10"
        android:inputType="textPassword"
        android:hint="确认密码"
        android:textSize="@dimen/font_13"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_cacaca"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/common_30"
    android:textSize="@dimen/font_11"
    android:textColor="@color/color_a8a8a8"
    android:text="小提示：密码建议长度10-12位支持数字、字母及标点符号"
    android:paddingLeft="@dimen/common_10"
    android:paddingTop="@dimen/common_7"
    />
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="@dimen/common_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        android:background="@drawable/shape_login_btn_bg"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_18"/>

</LinearLayout>
