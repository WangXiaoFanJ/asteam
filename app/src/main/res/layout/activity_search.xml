<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/common_45"
        android:background="@color/color_title_bar_bg"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/common_31"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/common_10"
        android:background="@drawable/shape_search_title_bar_bg"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜课程"
            android:textSize="@dimen/font_12"
            android:layout_marginLeft="@dimen/common_10"
          />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_down"
            android:layout_marginLeft="@dimen/common_3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="搜索你想要的课程或机构"
            android:layout_marginLeft="@dimen/common_15"
            android:textColorHint="@color/color_9b9b9b"
            android:textSize="@dimen/font_12"
            android:background="@drawable/shape_search_title_bar_bg"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_18"
            android:text="取消"
            android:textColor="@color/color_ff6733"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:text="最近搜索"
            android:textSize="@dimen/font_12"
            android:paddingLeft="@dimen/font_11"
            android:gravity="center_vertical"
            android:textColor="@color/color_a0a0a0"
            />
        <cn.lankton.flowlayout.FlowLayout
            android:id="@+id/flow_layout_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineSpacing="10dp"
            android:background="@color/color_bg">
        </cn.lankton.flowlayout.FlowLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_33"
            android:text="暂无搜索历史"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:text="热门搜索"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_a0a0a0"
            android:paddingLeft="@dimen/font_11"
            android:gravity="center_vertical"
            />
        <cn.lankton.flowlayout.FlowLayout
            android:id="@+id/flow_layout_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineSpacing="10dp"
            android:background="@color/color_bg">
        </cn.lankton.flowlayout.FlowLayout>
    </LinearLayout>

</LinearLayout>
