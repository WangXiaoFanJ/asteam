<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context="com.dev.nutclass.activity.UserInfoActivity">
<com.dev.nutclass.view.TitleBar
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_45"
    app:left_type="1"
    app:middle_text="个人信息"
    ></com.dev.nutclass.view.TitleBar>
    <RelativeLayout
        android:id="@+id/rl_change_head_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_81"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:layout_marginTop="@dimen/common_11"
        android:background="@color/color_white">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="头像"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_head_portrait"
                android:layout_width="@dimen/common_61"
                android:layout_height="@dimen/common_61"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_16"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:layout_marginTop="@dimen/common_11"
        android:background="@color/color_white">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="昵称"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="骏马谣"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_5"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_bg"
        android:paddingLeft="@dimen/common_10"/>
    <RelativeLayout
        android:id="@+id/rl_baby_birth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:background="@color/color_white">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="宝宝生日"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_baby_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010-3-3"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_5"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_bg"
        android:layout_marginLeft="@dimen/common_10"/>
    <RelativeLayout
        android:id="@+id/rl_baby_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:background="@color/color_white">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="宝宝性别"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_5"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone_modify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:layout_marginTop="@dimen/common_11"
        android:background="@color/color_white">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="手机号"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18611037777"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_5"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_bg"
        android:layout_marginLeft="@dimen/common_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_16"
        android:paddingRight="@dimen/common_16"
        android:background="@color/color_white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:text="修改密码"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginLeft="@dimen/common_5"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        android:layout_marginTop="@dimen/common_31"
        android:text="退出登录"
        android:textSize="@dimen/font_18"
        android:textColor="@color/color_white"
        android:background="@drawable/shape_login_btn_bg"/>
</LinearLayout>
