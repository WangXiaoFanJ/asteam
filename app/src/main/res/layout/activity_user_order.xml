<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context="com.dev.nutclass.activity.UserOrderActivity">
    <com.dev.nutclass.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_45"
        android:background="@color/color_title_bar_bg"
        app:left_type="1"
        app:middle_text="我的订单"
        ></com.dev.nutclass.view.TitleBar>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        app:tabTextColor="@color/color_333333"
        app:tabSelectedTextColor="@color/color_f75250"
        app:tabIndicatorColor="@color/color_f75250"
        app:tabIndicatorHeight="@dimen/common_1"
        app:tabBackground="@color/color_white"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
       app:tabPaddingEnd="@dimen/common_5"></android.support.design.widget.TabLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
