<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.dev.nutclass.activity.WriteCommentActivity">
    <com.dev.nutclass.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_45"
        app:left_type="1"
        app:middle_text="写评论"
        android:background="@color/color_title_bar_bg"
        ></com.dev.nutclass.view.TitleBar>
    <RelativeLayout
        android:paddingLeft="@dimen/common_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@color/color_white"
        android:paddingTop="@dimen/common_8"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
       >
            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="课程质量"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14"/>
            <com.dev.nutclass.view.StarCommentLayout
                android:id="@+id/star_comment_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_like_degree_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a8a8a8"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_14"
            android:layout_marginRight="@dimen/common_10"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/common_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@color/color_white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="校区服务"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14"/>
            <com.dev.nutclass.view.StarCommentLayout
                android:id="@+id/star_comment_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_like_degree_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a8a8a8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_14"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/common_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/common_8"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:text="课比课服务"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14"/>
            <com.dev.nutclass.view.StarCommentLayout
                android:id="@+id/star_comment_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_like_degree_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a8a8a8"
            android:textSize="@dimen/font_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_113"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:paddingTop="@dimen/common_10"
        android:hint="课程怎么样？老师好不好？环境如何？教学质量怎么样？"
        android:textColorHint="@color/color_a8a8a8"
        android:textSize="@dimen/font_14"
        android:gravity="start"
        android:background="@drawable/shape_edit_normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="@dimen/common_81"
            android:layout_height="@dimen/common_81"
            android:src="@drawable/icon_camera"
            android:paddingLeft="@dimen/common_10"/>
    </RelativeLayout>


</LinearLayout>
