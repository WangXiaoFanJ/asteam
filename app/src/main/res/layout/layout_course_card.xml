<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_8"
        android:paddingTop="@dimen/common_8"
        android:paddingBottom="@dimen/common_7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="@dimen/common_75"
            android:layout_height="@dimen/common_75"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_25"
                android:gravity="center_vertical"
                android:text="精锐教育蓝色港湾"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_333333"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_25"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/common_11"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shop_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双井"
                    android:textSize="@dimen/font_11"
                    android:textColor="@color/color_7f7f7f"/>
                <TextView
                    android:id="@+id/tv_cate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_24"
                    android:text="升学辅导"
                    android:textSize="@dimen/font_11"
                    android:textColor="@color/color_7f7f7f"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_25"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_f75250"
                    android:text="￥1200"
                    android:textSize="@dimen/font_14"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>