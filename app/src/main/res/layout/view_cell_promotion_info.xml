        android:id="@+id/tv_content_name"
        android:background="@drawable/shape_tv_course_time_selected"
        android:text="立减了啊"
        android:paddingLeft="@dimen/common_3"
        android:paddingRight="@dimen/common_3"
        android:paddingTop="@dimen/common_2"
        android:paddingBottom="@dimen/common_2"
        android:textSize="@dimen/font_13"
        android:textColor="@color/color_f75250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/common_10"
        android:id="@+id/iv_content_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
