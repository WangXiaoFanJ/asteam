<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_53"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:singleLine="true"
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精锐教育蓝色港湾"
                android:textSize="@dimen/font_13"
                android:textColor="@color/color_333333"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_icon_promotion"
                android:layout_width="@dimen/common_16"
                android:layout_height="@dimen/common_16"
                android:src="@drawable/icon_promotion"
                android:layout_marginLeft="@dimen/common_7"
                android:scaleType="fitXY"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_icon_hot"
                android:layout_width="@dimen/common_16"
                android:layout_height="@dimen/common_16"
                android:layout_marginLeft="@dimen/common_7"
                android:src="@drawable/icon_hot"
                android:scaleType="fitXY"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/common_6"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_money"
                android:layout_width="@dimen/common_8"
                android:layout_height="@dimen/common_11"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/common_2"
                />
            <TextView
                android:id="@+id/tv_kbk_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200 "
                android:textColor="@color/color_f75250"
                android:textSize="@dimen/font_12" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
       <!---->
                <!--android:text="￥1200"-->
                <!--android:textColor="@color/color_a8a8a8"-->
                <!--android:textSize="@dimen/font_10" />-->

            <TextView
                android:layout_marginLeft="@dimen/common_21"
                android:layout_marginRight="@dimen/common_3"
                android:id="@+id/tv_shop_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1200 "
                android:textColor="@color/color_a8a8a8"
                android:textSize="@dimen/font_10" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"/>
</LinearLayout>