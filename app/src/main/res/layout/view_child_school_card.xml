<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_53"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_10">

        <TextView
            android:id="@+id/tv_good_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲亲袋鼠脑神经课程"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/common_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kbk_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1200 "
                android:textColor="@color/color_f75250"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_21"
                android:layout_marginRight="@dimen/common_3"
                android:text="￥1200"
                android:textColor="@color/color_a8a8a8"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/tv_shop_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1200 "
                android:textColor="@color/color_a8a8a8"
                android:textSize="@dimen/font_10" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"/>
</LinearLayout>