<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:layout_marginTop="@dimen/common_10"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_10">
        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精锐教育蓝色港湾中心"
            android:textColor="@color/color_7f7f7f"
            android:textSize="@dimen/font_14"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/common_7"
            android:layout_height="@dimen/common_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:scaleType="fitXY"
            android:src="@drawable/icon_arrow_right_normal"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"/>
  <include layout="@layout/view_amusement_park_card"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1"
            android:background="@color/color_dcdcdc"
            android:layout_marginLeft="@dimen/common_95"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_gift_01"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_gift_img_icon"
                android:layout_width="@dimen/common_42"
                android:layout_height="@dimen/common_15"
                android:layout_marginLeft="@dimen/common_43"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/iv_gift_img"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_width="@dimen/common_16"
                android:layout_height="@dimen/common_16"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_gift_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="精美礼品一份"
                android:layout_marginLeft="@dimen/common_3"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_gift_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_11"
            android:layout_marginBottom="@dimen/common_11"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_gift_img_02"
                android:layout_marginLeft="@dimen/common_95"
                android:layout_width="@dimen/common_16"
                android:layout_height="@dimen/common_16"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_gift_info_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="精美礼品一份"
                android:layout_marginLeft="@dimen/common_3"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>