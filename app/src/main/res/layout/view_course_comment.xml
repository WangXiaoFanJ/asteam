<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_10"
    android:paddingRight="@dimen/common_10"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_user_head_img"
            android:layout_width="@dimen/common_44"
            android:layout_height="@dimen/common_44"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一朵蘑菇"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_333333"/>
            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-26"
                android:textColor="@color/color_7f7f7f"
                android:textSize="@dimen/common_10"
                android:layout_marginTop="@dimen/common_5"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_info"
        android:layout_marginTop="@dimen/common_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        android:maxLines="3"
        />
    <LinearLayout
        android:id="@+id/ll_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/common_10"
        android:layout_height="@dimen/common_37"
        android:paddingRight="@dimen/common_10">
        <TextView
            android:id="@+id/tv_brown_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666浏览"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_7f7f7f"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_10"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="@dimen/common_18"
                android:layout_height="@dimen/common_18"
                android:scaleType="fitXY"
                android:src="@drawable/praise_icon"/>
            <TextView
                android:id="@+id/tv_praise_num"
                android:layout_marginLeft="@dimen/common_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                />
            <ImageView
                android:layout_marginLeft="@dimen/common_4"
                android:layout_width="@dimen/common_18"
                android:layout_height="@dimen/common_18"
                android:scaleType="fitXY"
                android:src="@drawable/icon_message02"/>
            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_marginLeft="@dimen/common_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>