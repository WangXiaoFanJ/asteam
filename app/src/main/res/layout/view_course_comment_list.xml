<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">
    <LinearLayout
        android:id="@+id/ll_container_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_container_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_look_more"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="@dimen/common_37"
        android:layout_marginLeft="@dimen/common_60">
        <TextView
            android:id="@+id/tv_introduce_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看全部评论"
            android:textColor="@color/color_7f7f7f"
            android:textSize="@dimen/font_12"
            android:layout_centerVertical="true"
            />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/common_6"
                android:layout_height="@dimen/common_10"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right_normal"
                android:layout_marginRight="@dimen/common_10"
                android:layout_marginLeft="@dimen/common_6"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"/>
</LinearLayout>