<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
   >
    <!--官方认证等图标-->
    <RelativeLayout
        android:layout_marginTop="@dimen/common_11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@color/color_white"
        >
        <LinearLayout
            android:id="@+id/ll_course_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow_right_normal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_bg"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_minus"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon_minus"
                android:layout_width="@dimen/common_19"
                android:layout_height="@dimen/common_19"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_minus_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立减99999"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="@dimen/common_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right_normal"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_gift"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon_gift"
                android:layout_width="@dimen/common_19"
                android:layout_height="@dimen/common_19"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_gift_info"
                android:layout_marginLeft="@dimen/common_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立减99999"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right_normal"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!--选择课时-->
    <RelativeLayout
        android:id="@+id/rl_select_course_time"
        android:layout_marginTop="@dimen/common_11"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="@dimen/common_44">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择课时"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:layout_marginLeft="@dimen/common_11"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_select_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我选课"
                android:textSize="@dimen/font_11"
                android:textColor="@color/color_ff6733"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right_yellow"
                android:layout_marginRight="@dimen/common_10"
                android:layout_marginLeft="@dimen/common_6"/>
        </LinearLayout>
    </RelativeLayout>


    <!--校区信息模块-->
   <include layout="@layout/layout_school_info_card"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"
        android:layout_marginLeft="@dimen/common_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:gravity="center_vertical"
        android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看其它校区"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_11"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_11"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_11"/>
    </RelativeLayout>

<!--课程详情介绍-->
    <RelativeLayout
        android:layout_marginTop="@dimen/common_11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程详情介绍"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_11"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多图文介绍"
                android:textSize="@dimen/font_11"
                android:textColor="@color/color_7f7f7f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_right"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_marginRight="@dimen/common_11"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>