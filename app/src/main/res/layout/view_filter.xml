<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="附近"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13" />

            <ImageView
                android:id="@+id/iv_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_5"
                android:src="@drawable/tab_arrow_down" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="11dp"
            android:background="@color/list_divider_line" />
        <LinearLayout
            android:id="@+id/ll_other1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_other1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="分类"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13" />

            <ImageView
                android:id="@+id/iv_arrow_other1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_5"
                android:src="@drawable/tab_arrow_down" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="11dp"
            android:background="@color/list_divider_line" />

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="智能排序"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_5"
                android:src="@drawable/tab_arrow_down" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="11dp"
            android:background="@color/list_divider_line" />
        <LinearLayout
            android:id="@+id/ll_other2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_other2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="筛选"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_13" />

            <ImageView
                android:id="@+id/iv_arrow_other2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_5"
                android:src="@drawable/tab_arrow_down" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>