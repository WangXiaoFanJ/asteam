<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_marginTop="@dimen/common_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_10">
        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="马博士婴儿游泳馆游泳卡"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_333333"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_4">
            <TextView
                android:id="@+id/tv_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="升学辅导"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"/>
            <TextView
                android:id="@+id/tv_interest_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="666感兴趣"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                android:layout_marginLeft="@dimen/common_16"/>
            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12评论"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_7f7f7f"
                android:layout_marginLeft="@dimen/common_14"/>
        </LinearLayout>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_65"
            android:layout_marginTop="@dimen/common_5">
            <LinearLayout
                android:id="@+id/ll_image_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1"
            android:background="@color/color_dcdcdc" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_13"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_school_addr"
                    android:singleLine="true"
                    android:layout_width="@dimen/common_235"
                    android:layout_height="wrap_content"
                    android:text="北京市通州梨园贵友大厦往南100米底商二楼"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_12"
                    android:layout_marginTop="@dimen/common_6"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_8"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/common_8">
                    <ImageView
                        android:layout_width="@dimen/common_8"
                        android:layout_height="@dimen/common_10"
                        android:src="@drawable/icon_location"/>
                    <TextView
                        android:layout_marginLeft="@dimen/common_3"
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.2km"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/color_a8a8a8"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <View
                    android:layout_width="@dimen/common_1"
                    android:layout_height="@dimen/common_30"
                    android:background="@color/color_cacaca"/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="@dimen/common_23"
                    android:layout_height="@dimen/common_23"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_phone_yellow"
                    android:layout_marginRight="@dimen/common_17"
                    android:layout_marginLeft="@dimen/common_17"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>