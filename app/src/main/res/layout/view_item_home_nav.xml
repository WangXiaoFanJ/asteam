<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="vertical"
    android:gravity="center"
  >

    <LinearLayout
        android:id="@+id/ll_nav_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
    <ImageView
        android:id="@+id/iv_home_nav"
        android:layout_width="@dimen/common_24"
        android:layout_height="@dimen/common_24"
        android:scaleType="centerInside"
        android:src="@drawable/selector_home_nav_home"/>
    <TextView
        android:id="@+id/tv_home_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_5"
        android:text="@string/home_nav_home"
        android:textColor="@drawable/selector_home_nav_txt"
        android:textSize="@dimen/font_10"
        android:visibility="visible"
        />
</LinearLayout>
</LinearLayout>