<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_45"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/color_title_bar_bg"
    android:gravity="center_vertical">
    <FrameLayout
        android:id="@+id/fl_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/common_10"
        android:layout_centerVertical="true">
        <FrameLayout
            android:id="@+id/fl_title_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <FrameLayout
            android:id="@+id/fl_title_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_title_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_line" />
</LinearLayout>