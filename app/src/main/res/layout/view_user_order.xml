<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_1"
        android:background="@color/color_dcdcdc"
        android:layout_marginLeft="@dimen/common_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_44"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10">
        <TextView
            android:id="@+id/tv_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正课"
            android:layout_centerVertical="true"
            android:textColor="@color/color_a8a8a8"
            android:textSize="@dimen/font_12"/>
        <TextView
            android:id="@+id/tv_back_money_str"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_a8a8a8"
            android:text="已申请等待课比课的客服与您沟通"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_right_01"
                android:layout_width="@dimen/common_70"
                android:layout_height="@dimen/common_25"
                android:gravity="center"
                android:textColor="@color/color_a8a8a8"
                android:text="申请退款"
                android:textSize="@dimen/font_12"
                android:background="@drawable/shape_gray_btn_radius"
                android:layout_marginRight="@dimen/common_10"/>
            <TextView
                android:layout_width="@dimen/common_70"
                android:layout_height="@dimen/common_25"
                android:gravity="center"
                android:id="@+id/tv_right_02"
                android:text="去评价"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_f75250"
                android:background="@drawable/shape_pink_btn_radius"/>
        </LinearLayout>
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_10"
    android:background="@color/color_bg"/>
</LinearLayout>